# Python code to count the number of columns in data.csv

import sys

try:
    import pandas as pd
except ImportError as e:
    sys.stderr.write("Missing pandas library. Please install it using: pip install pandas\n")
    raise

# Read the CSV file
try:
    df = pd.read_csv("data.csv")
except FileNotFoundError:
    print("Error: data.csv not found in the working directory.")
    sys.exit(1)
except Exception as e:
    print(f"Error reading data.csv: {e}")
    sys.exit(1)

# Compute number of columns
num_columns = df.shape[1]

# Output the result
print(f"Number of columns in data.csv: {num_columns}")

print("Task completed: Computed the number of columns in data.csv successfully.")
