# Count number of columns in data.csv

import pandas as pd
import sys

try:
    df = pd.read_csv('data.csv')
    num_columns = df.shape[1]
    print(f"Number of columns in data.csv: {num_columns}")
    print("Task completed: counted the columns successfully.")
except Exception as e:
    print(f"Error while processing data.csv: {e}", file=sys.stderr)
    print("Task completed: failed to count columns due to the above error.")
